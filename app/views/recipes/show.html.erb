<div class="max-w-2xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <%= link_to "← Back to recipes", recipes_path, class: "text-gray-600 hover:text-gray-800" %>
    <%= link_to "Edit", edit_recipe_path(@recipe), class: "bg-blue-600 text-white py-2 px-4 rounded-md font-medium hover:bg-blue-700" %>
  </div>

  <!-- Recipe Details -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @recipe.title %></h1>
    
    <div class="grid grid-cols-2 gap-4 mb-6 text-sm text-gray-600">
      <div>Servings: <%= @recipe.servings %></div>
      <div>Prep time: <%= @recipe.prep_time_mins %> mins</div>
      <div>Cook time: <%= @recipe.cook_time_mins %> mins</div>
      <div>Source: <%= @recipe.source %></div>
    </div>

    <!-- Ingredients -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-3">Ingredients</h2>
      <% @recipe.ingredient_groups.each do |group| %>
        <ul class="space-y-1">
          <% group.ingredients.each do |ingredient| %>
            <li class="text-gray-700"><%= ingredient.text %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <!-- Method -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-3">Method</h2>
      <ol class="space-y-3">
        <% @recipe.steps.each_with_index do |step, index| %>
          <li class="text-gray-700">
            <span class="font-medium text-gray-900"><%= index + 1 %>.</span>
            <%= step.description %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
